<Page x:Class="HelpHive.Views.Pages.UserNewTicket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HelpHive.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="UserNewTicket"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding LoggedInUser.FirstName, StringFormat='Welcome back, {0}'}" 
                   Foreground="#22313f"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   VerticalAlignment="Top"
                   Margin="0,20,20,0"
                   Grid.Row="0" 
                   Grid.Column="2"/>

        <TextBlock Text="Create New Ticket"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#22313f"
                   FontWeight="SemiBold"
                   FontSize="26"
                   Margin="0,20,0,0"
                   Grid.Row="1" 
                   Grid.Column="1"/>

        <!-- This StackPanel is main container for form elements -->
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,20">
            <!-- Bind TextBox Text to Subject in VM -->
            <TextBlock Text="Subject"/>
            <TextBox Text="{Binding Subject, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" Height="25" FontSize="16"/>

            <!-- Bind ComboBox's SelectedItem to SelectedDepartment property in VM -->
            <TextBlock Text="Department" />
                <ComboBox ItemsSource="{Binding Departments}"
                    DisplayMemberPath="Name"
                    SelectedValuePath="Id"
                    Height="25" FontSize="16"
                    SelectedValue="{Binding SelectedDepartmentId, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,5">
                </ComboBox>

            <!-- Bind ComboBox's SelectedItem to SelectedPriority property in VM -->
            <TextBlock Text="Priority" />
            <ComboBox SelectedValue="{Binding SelectedPriority, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Content" Height="25" FontSize="16" Margin="0,5">
                <ComboBoxItem Content="Low"/>
                <ComboBoxItem Content="Medium"/>
                <ComboBoxItem Content="High"/>
            </ComboBox>

            <!-- Bind Text prop to Message in VM -->
            <TextBlock Text="Message" />
            <TextBox Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" TextWrapping="Wrap" AcceptsReturn="True" Height="100" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"/>

            <!-- Will handle file attachment here is enough time -->
            <TextBlock Text="Attachments" />
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Button Content="Browse"/>
                <Button Content="Add More" Margin="5,0,0,0"/>
            </StackPanel>
            <TextBlock Text="Allowed File Extensions: jpg, pdf, zip, xls, doc, docx (Max file size: 1024MB)" Margin="0,5"/>

            <!-- Bind Command for CreateTicketButton in VM -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20">
                <Button x:Name="CreateTicketButton" Command="{Binding CreateTicketCommand}" Content="Create Ticket" Margin="5,0"/>
                <Button Content="Cancel" Margin="5,0"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
