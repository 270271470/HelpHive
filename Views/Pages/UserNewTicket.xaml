<Page x:Class="HelpHive.Views.Pages.UserNewTicket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HelpHive.Views.Pages"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="UserNewTicket" Height="587.941">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding LoggedInUser.FirstName, StringFormat='Welcome back, {0}'}" 
                   Foreground="#22313f"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   VerticalAlignment="Top"
                   Margin="0,20,20,0"
                   Grid.Row="0" 
                   Grid.Column="2"/>

        <TextBlock Text="Create New Ticket"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#22313f"
                   FontWeight="SemiBold"
                   FontSize="26"
                   Margin="0,20,0,0"
                   Grid.Row="1" 
                   Grid.Column="1"/>

        <!-- This StackPanel is the main container for the form elements -->
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,20">
            <TextBlock Text="Subject" />
            <TextBox Margin="0,5"/>

            <TextBlock Text="Department" />
            <ComboBox SelectedIndex="0" Margin="0,5">
                <ComboBoxItem Content="Support"/>
                <!-- Add other departments here -->
            </ComboBox>

            <TextBlock Text="Priority" />
            <ComboBox SelectedIndex="1" Margin="0,5">
                <ComboBoxItem Content="Low"/>
                <ComboBoxItem Content="Medium"/>
                <ComboBoxItem Content="High"/>
            </ComboBox>

            <TextBlock Text="Message" />
            <TextBox Margin="0,5" TextWrapping="Wrap" AcceptsReturn="True" Height="100" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"/>

            <TextBlock Text="Attachments" />
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Button Content="Browse"/>
                <Button Content="Add More" Margin="5,0,0,0"/>
            </StackPanel>
            <TextBlock Text="Allowed File Extensions: jpg, pdf, zip, xls, doc, docx (Max file size: 1024MB)" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20">
                <Button x:Name="CreateTicketButton" Command="{Binding CreateTicketCommand}" Content="Create Ticket" Margin="5,0"/>
                <Button Content="Cancel" Margin="5,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
