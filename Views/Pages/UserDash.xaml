<Page x:Class="HelpHive.Views.Pages.UserDash"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HelpHive.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserDash">

    <Grid>
        <!-- Content for the user dashboard here -->
        <TextBlock Text="Welcome to your dashboard!" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding LoggedInUser.FirstName}" />
        <TextBlock Text="{Binding LoggedInUser.LastName}" />
    </Grid>
</Page>
