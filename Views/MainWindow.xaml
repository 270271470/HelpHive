<Window x:Class="HelpHive.Views.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  Title="HelpHive" Height="640" Width="1024">
    <!-- Source="Views/Pages/WelcomePage.xaml" -->
    <!-- No direct content here for NavigationWindow -->

    <Grid>
        <!-- Define grid columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#343C66" Width="200">
            <Button Content="New Ticket" Click="OnNewTicketClicked" Foreground="White"/>
            <Button Content="Active Tickets" Click="OnActiveTicketsClicked" Foreground="White"/>
            <Button Content="Ticket History" Click="OnTicketHistoryClicked" Foreground="White"/>
            <!-- You can style these buttons further to match the Figma design -->
        </StackPanel>

        <!-- Frame for Navigation -->
        <!-- Main Content Frame -->
        <Frame x:Name="MainFrame" Grid.Column="1">
            <!-- This is where your pages (like WelcomePage) will be displayed -->
        </Frame>
    </Grid>

</Window>
